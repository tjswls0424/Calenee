    <style name="MainStyle.LightPurple" parent="@style/Theme.LightPurple">
        <item name="android:colorPrimary">@color/white</item>
        <item name="android:itemBackground">@color/white</item>
    </style>

    <!-- action bar(toolbar) style -->
    <style name="MainActionbar.Button" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/black</item>
    </style>

    <!-- social login (google) -->
    <style name="CustomButton">
        <!--        <item name="android:layout_width">match_parent</item>-->
        <!--        <item name="android:layout_height">70dp</item>-->
    </style>

    <style name="CustomButton.Login">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/ibm_plex_sans_kr_regular</item>
        <item name="android:layout_marginBottom">7dp</item>
        <item name="iconSize">30dp</item>
        <item name="iconTintMode">add</item>
        <item name="iconTint">@android:color/transparent</item>
        <item name="android:background">@drawable/login_btn_background</item>
        <item name="backgroundTint">@color/light_grey2</item>
    </style>

    <!-- custom font - TextView -->
    <style name="CustomFont.TextView" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/ibm_plex_sans_kr_regular</item>
        <item name="fontFamily">@font/ibm_plex_sans_kr_regular</item>
    </style>

    <!-- custom font - TextView -->
    <style name="CustomFont.EditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/ibm_plex_sans_kr_regular</item>
        <item name="fontFamily">@font/ibm_plex_sans_kr_regular</item>
    </style>

    <!-- custom font - Button -->
    <style name="CustomFont.Button" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/ibm_plex_sans_kr_regular</item>
        <item name="fontFamily">@font/ibm_plex_sans_kr_regular</item>
    </style>

    <!-- Material edit text (login) -->
    <style name="MaterialLoginEditTextLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="counterMaxLength">1</item>
        <item name="boxStrokeColor">@color/sub_color</item>
        <item name="boxBackgroundColor">#11BCBCBC</item>
        <item name="android:textColorHint">#595959</item>
        <item name="hintTextColor">#595959</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="TextInputEditText" />

    <style name="TextInputEditText.FilledBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ibm_plex_sans_kr_light</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:background">@color/light_grey</item>
    </style>

    <!-- BottomSheetDialog -->
    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.1</item>
        <!--        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>-->
        <!--        <item name="android:background">@color/transparent</item>-->
        <!--        <item name="android:elevation">0dp</item>-->
        <!--        <item name="android:backgroundDimAmount">0</item>-->
    </style>

    <!-- chat menu item -->
    <style name="ChatMenu">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:background">@drawable/chat_item_background</item>
        <item name="android:backgroundTint">@color/sub_color7</item>
    </style>

    <style name="ChatMediaInfo">
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingVertical">1dp</item>
    </style>

    <!-- edit couple info -->
    <style name="EditCoupleInfoIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="EditCoupleInfoArrow">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/ic_arrow_right_24</item>
        <item name="android:backgroundTint">@color/light_grey3</item>
    </style>

    <style name="EditCoupleInfoText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingHorizontal">10dp</item>
    </style>

    <style name="EditCoupleInfoRow">
        <item name="android:paddingVertical">7dp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <!-- NumberPicker Dialog -->
    <style name="EditCoupleInfoNumberPicker">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:selectionDividerHeight">0.5dp</item>
        <item name="layout_constraintHorizontal_weight">1</item>
        <item name="layout_constraintBottom_toTopOf">@id/cancel_btn</item>
        <item name="layout_constraintTop_toBottomOf">@id/dialog_title_tv</item>
    </style>

    <style name="EditCoupleInfoButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_marginHorizontal">5dp</item>
        <item name="android:backgroundTint">@color/light_grey2</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintHorizontal_weight">1</item>
    </style>

    <!-- toggle button for today message position -->
    <style name="TodayMessagePositionToggleButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:checked">false</item>
        <item name="android:background">@drawable/today_message_position_button_background</item>
    </style>

</resources>